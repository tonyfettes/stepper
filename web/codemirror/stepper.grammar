@top Top { expression* }

keyword<term> { @specialize[@name={term}]<identifier, term> }

@tokens {
  integer {
    ("+" | "-")? @digit+
  }

  identifier {
    $[a-zA-Z] $[a-zA-Z0-9_]*
  }
}

expression[@isGroup=Expression] {
  integer |
  LetExpression {
    keyword<"let"> identifier "=" expression keyword<"in"> expression
  }
}
